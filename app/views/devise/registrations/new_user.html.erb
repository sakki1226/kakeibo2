<h2>Sign up</h2>

<%= form_with model:@family_user, url: users_create_user_path, class: 'registration-main', local: true do |f| %>

  
  <div class='form-wrap'>
    <p> ユーザー2</p>

    <%= f.fields_for :user2 do |user2_fields| %>
      <div class="form-group">
        <div class='form-text-wrap'>
          <%= user2_fields.label :ニックネーム %>
          <span class="indispensable">必須</span>
        </div>
        <%= user2_fields.text_field :nickname, class:"input-default", id:"nickname", placeholder:"例) taro" %>
      </div>

      <div class="form-group">
        <div class='form-text-wrap'>
          <%= user2_fields.label :メールアドレス %>
          <span class="indispensable">必須</span>
        </div>
        <%= user2_fields.email_field :email, class:"input-default", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true %>
      </div>

      <div class="form-group">
        <div class='form-text-wrap'>
          <%= user2_fields.label :パスワード %>
          <span class="indispensable">必須</span>
        </div>
        <%= user2_fields.password_field :password, class:"input-default", id:"password", placeholder:"6文字以上の半角英数字" %>
      </div>

      <div class="form-group">
        <div class='form-text-wrap'>
          <%= user2_fields.label :パスワード確認 %>
          <span class="indispensable">必須</span>
        </div>
        <%= user2_fields.password_field :password_confirmation, class:"input-default", id:"password-confirmation", placeholder:"同じパスワードを入力して下さい" %>
      </div>
    <% end %>

    <div class='register-btn'>
      <%= f.submit "新規登録", class:"register-blue-btn" %>
    </div>
  </div>
<% end %>
  
<div class="actions">
  <%= link_to "前へ", new_user_registration_path %>
</div>

