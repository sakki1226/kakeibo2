<h2>編集ページ</h2>

<div class="registration-form-wrap">
  <%= form_for(current_user, url: user_path(current_user), method: :patch) do |f| %>
    <div class="form-group">
      <div class='form-text-wrap'>
        <%= f.label :ニックネーム %>
        <span class="indispensable">必須</span>
      </div>
      <%= f.text_field :nickname, class:"input-default", id:"nickname", placeholder:"例) taro" %>
    </div>

    <div class="form-group">
      <div class='form-text-wrap'>
        <%= f.label :メールアドレス %>
        <span class="indispensable">必須</span>
      </div>
      <%= f.email_field :email, class:"input-default", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true %>
    </div>

    <div class="form-group">
      <div class='form-text-wrap'>
        <%= f.label :パスワード %>
        <span class="indispensable">必須</span>
      </div>
      <%= f.password_field :password, class:"input-default", id:"password", placeholder:"6文字以上の半角英数字" %>
    </div>

    <div class="form-group">
      <div class='form-text-wrap'>
        <%= f.label :パスワード確認 %>
        <span class="indispensable">必須</span>
      </div>
      <%= f.password_field :password_confirmation, class:"input-default", id:"password-confirmation", placeholder:"同じパスワードを入力して下さい" %>
    </div>

    <div class="btn-container">
      <button class="btn">
        <span class="text">編集</span>
        <span class="icon"></span>
      </button>
    </div>
  <% end %>
</div>