<div class ="income-main">

  <h1>収入の登録</h1>

  <div class="income-form">
  <%= render "devise/shared/error_messages", resource: @income %>
    <%= form_with(model: @income, local: true) do |f| %>

      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">収入の種類</label>
          <span class="indispensable">必須</span>
        </div>
        <%= f.collection_select(:income_category_id, IncomeCategory.all, :id, :name, {}, {class:"select-box", id:"prefecture"}) %>
      </div>

      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">金額</label>
          <span class="indispensable">必須</span>
        </div>
        <%= f.text_field :price, class:"input-default", id:"postal-code" %>
      </div>

      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">日時</label>
          <span class="indispensable">必須</span>
        </div>
        <%= f.date_field :date, class: 'date-select' %>
      </div>

      <div class="button-container">
        <button class="btn">
        <span class="text">登録</span>
        <span class="icon"></span>
      </button>
    <% end %>
  </div>
</div>
